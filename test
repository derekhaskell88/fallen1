import tkinter as tk
from tkinter import ttk
from tkinter import messagebox


class RightTriangleCalculator:
    def __init__(self, master):
        self.master = master
        self.master.title("Right Triangle Calculator")

        self.label_a = ttk.Label(master, text="Side a:")
        self.label_a.grid(row=0, column=0, padx=5, pady=5)

        self.entry_a = ttk.Entry(master)
        self.entry_a.grid(row=0, column=1, padx=5, pady=5)

        self.label_b = ttk.Label(master, text="Side b:")
        self.label_b.grid(row=1, column=0, padx=5, pady=5)

        self.entry_b = ttk.Entry(master)
        self.entry_b.grid(row=1, column=1, padx=5, pady=5)

        self.label_c = ttk.Label(master, text="Side c:")
        self.label_c.grid(row=2, column=0, padx=5, pady=5)

        self.entry_c = ttk.Entry(master)
        self.entry_c.grid(row=2, column=1, padx=5, pady=5)

        self.button_calculate = ttk.Button(
            master, text="Calculate", command=self.calculate)
        self.button_calculate.grid(row=3, column=0, padx=5, pady=5)

        self.button_clear = ttk.Button(
            master, text="Clear", command=self.clear)
        self.button_clear.grid(row=3, column=1, padx=5, pady=5)

    def calculate(self):
        try:
            a = self.entry_a.get().strip()
            b = self.entry_b.get().strip()
            c = self.entry_c.get().strip()

            if not (a and b) and not c:
                raise ValueError("At least two sides must be entered.")

            if a and b and c:
                raise ValueError("Only two sides can be entered at a time.")

            if a:
                a = float(a)
                if a <= 0:
                    raise ValueError("Side a must be positive.")
                b = self.entry_b.get().strip()
                if not b:
                    raise ValueError("Side b must be entered.")
                b = float(b)
                c = (a**2 + b**2)**0.5
                self.entry_c.delete(0, tk.END)
                self.entry_c.insert(0, c)
            elif b:
                b = float(b)
                if b <= 0:
                    raise ValueError("Side b must be positive.")
                a = self.entry_a.get().strip()
                if not a:
                    raise ValueError("Side a must be entered.")
                a = float(a)
                c = (a**2 + b**2)**0.5
                self.entry_c.delete(0, tk.END)
                self.entry_c.insert(0, c)
            else:
                c = float(c)
                if c <= 0:
                    raise ValueError("Side c must be positive.")
                a = self.entry_a.get().strip()
                b = self.entry_b.get().strip()
                if not a:
                    a = (c**2 - b**2)**0.5
                    self.entry_a.delete(0, tk.END)
                    self.entry_a.insert(0, a)
                elif not b:
                    b = (c**2 - a**2)**0.5
